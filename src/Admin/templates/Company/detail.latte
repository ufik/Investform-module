{block content}

	<div class="page-heading">	
		{if $company->getActive()}
			<a n:href="activeCompanies idPage => $idPage" class="back">{_'Back to active companies'}</a>
		{else}
			<a n:href="inactiveCompanies idPage => $idPage" class="back">{_'Back to inactive companies'}</a>
		{/if}

		<h1 class="float-l">{$company->getName()}</h1>

		<div class="changeActiveStatus float-r">
			{if $company->getActive()}
				<a n:href="deactivate id => $company->getId(), idPage => $idPage, inDetail => true" class="btn btn-primary ajax grey btn btn-default btn-xs btn-mini">{_'Deactivate'}</a>
			{else}
				<a n:href="activate id => $company->getId(), idPage => $idPage, inDetail => true" class="btn btn-primary ajax grey btn btn-default btn-xs btn-mini">{_'Activate'}</a>
			{/if}
		</div>

		<div class="clear"></div>
	</div>

	<div class="row control-group">

		<div class="col-md-6">
			
			<div class="contactInfo">
				<p>
					{$company->getStreet()}<br />
					{$company->getZipCity()}<br />
					{$company->getPhone()}<br />
					{$company->getEmail()}
				</p>

				<a n:href="update id => $company->getId(), idPage => $idPage" class="btn btn-primary green btn btn-default btn-xs btn-mini">{_'Update'}</a>
			</div>

		</div>

	</div>

	<div class="row control-group">
		
		<h2>{_'Businessmen'}</h2>
		{control businessmenGrid}

	</div>

	<div class="row control-group">

		<h2>{_'Investments'}</h2>
		{control investmentsGrid}

	</div>

{/block}